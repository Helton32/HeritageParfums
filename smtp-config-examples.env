# MAIL_PORT=2525
# MAIL_USERNAME=your-mailtrap-username
# MAIL_PASSWORD=your-mailtrap-password
# MAIL_ENCRYPTION=tls
# MAIL_FROM_ADDRESS="contact@heritage-parfums.fr"
# MAIL_FROM_NAME="Heritage Parfums"

